            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="15dp"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:text="@string/bienvenido_a_la_aplicaci_n_que_te_permitir_gestionar_casos_de_covid_19_y_agendar_tu_cita_de_manera_f_cil_y_desde_esta_plataforma_nica"
                    android:textAlignment="center"
                    android:textSize="24sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="login"
                    android:layout_margin="15dp"
                    android:text="Iniciar SesiÃ³n / Registrarse" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>





</LinearLayout>