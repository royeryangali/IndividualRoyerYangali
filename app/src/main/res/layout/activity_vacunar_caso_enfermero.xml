<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Enfermero.VacunarCasoEnfermero">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewFotoEditVacuna"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zona:"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"/>
        textViewZonaEditVacuna
        <TextView
            android:id="@+id/textViewZonaEditVacuna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AQUÍ IRÁ LA ZONA"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrador:"
            android:textSize="18sp"
            android:layout_marginHorizontal="10dp"/>

        <TextView
            android:id="@+id/textviewRegistradorEditVacuna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AQUÍ IRÁ LA REGISTRADOR"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Síntomas:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textviewSintomasEditVacuna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AQUÍ IRÁ LOS SINTOMAS VACUNA"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha:"
            android:textSize="18sp"
            android:layout_marginHorizontal="10dp"/>

        <TextView
            android:id="@+id/textviewFechaCreacionEditVacuna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AQUÍ IRÁ FECHA CREACION CASO"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Paciente:" />

        <TextView
            android:id="@+id/textviewPacienteVacuna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AQUÍ IRÁ NOMBRE PACIENTE"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DNI:" />

        <TextView
            android:id="@+id/textviewDniPacienteVacuna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AQUÍ IRÁ DNI PACIENTE"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="7dp"
        android:onClick="mostrarInfoDeUbicacion"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:text="Dir. GPS"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textviewDireccionGpsEditVacuna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:text="AQUÍ IRÁ DIR GPS"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="7dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado:"

            android:textSize="18sp"
            tools:layout_editor_absoluteY="370dp" />
        <TextView
            android:id="@+id/textviewEstadoVacuna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pendiente"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fecha de Vacunación:" />

        <EditText
            android:id="@+id/editTextTextFechaVacuna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:onClick="obtenerFechaVacuna" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginLeft="0dp"
            android:onClick="guardarVacuna"
            android:text="Vacunar" />
    </LinearLayout>



</LinearLayout>